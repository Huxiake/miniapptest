<!--pages/login/login.wxml-->
<view class="loginView">
<!-- <text>绑定一键跨境账号</text> -->
  <van-cell-group>
    <van-field
      value="{{ username }}"
      required
      clearable
      label="用户名"
      icon="question-o"
      placeholder="请输入用户名"
      bind:click-icon="onClickIcon"
    />

    <van-field
      value="{{ password }}"
      type="password"
      label="密码"
      placeholder="请输入密码"
      required
      border="{{ false }}"
    />
  </van-cell-group>
  <van-button type="info" size="large" class="loginbtn">绑 定 帐 号</van-button>
  <van-toast id="van-toast" />
</view>